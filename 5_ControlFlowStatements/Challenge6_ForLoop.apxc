// The pattern challenge

// Number of lines and columns
Integer n = 5;

// Repeat the same times as columns
for (Integer i = 1; i <= n; i++) {
    // Pattern to print
    String pattern = '';

    // Repeat the same times as lines
    for (Integer x = 1; x <= i; x++) {
        pattern += '*';
    }

    // Print the pattern
    System.debug(pattern);
}